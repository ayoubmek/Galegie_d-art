{# templates/artist/edit.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Edit Artist{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>Edit Artist</h1>

        {{ form_start(form) }}
            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="input-group input-group-dynamic">
                        {{ form_label(form.name, 'Nom de l\'artiste', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.name) }}
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="input-group input-group-dynamic">
                        {{ form_label(form.phone, 'Phone de l\'artiste', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.phone, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.phone) }}
                    </div>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="input-group input-group-dynamic">
                        {{ form_label(form.email, 'Email de l\'artiste', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.email) }}
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="input-group input-group-dynamic">
                        {{ form_label(form.biography, ' ', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.biography, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.biography) }}
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Update Artist</button>
        {{ form_end(form) }}
    </div>
{% endblock %}
